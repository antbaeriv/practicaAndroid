<resources>
    <style name="VideoStudiumTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNetflix</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorNetflix</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="BtnImagen" parent="android:Widget.ImageButton">
        <item name="android:background">@color/colorNull</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="BtnNormal" parent="android:Widget.Button">
        <item name="android:background">@color/colorNetflix</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>
