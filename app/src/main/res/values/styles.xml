<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNetflix</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorNetflix</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:buttonStyle">@style/BtnNormal</item>
        <item name="android:imageButtonStyle">@style/BtnImagen</item>
    </style>
    <style name="BtnImagen" parent="android:Widget.ImageButton">
        <item name="android:background">@color/transparente</item>
    </style>
    <style name="BtnNormal" parent="android:Widget.Button">
        <item name="android:background">@color/colorNetflix</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorBlanco</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/colorNetflix</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
</resources>
