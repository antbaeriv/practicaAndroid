<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uno.practicaandroid.MetodoPago">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl5PeliculaAlquilada"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:layout_below="@+id/btn5Home"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="50dp" />

        <ImageButton
            android:id="@+id/btn5Home"
            style="@style/BtnImagen"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/btn5Back"
            style="@style/BtnImagen"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/lbl5Seleccionar"
            android:layout_width="275dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/lbl5Seleccionar"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg5Pago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lbl5Seleccionar"
            android:layout_alignTop="@+id/lbl5Importe"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbTarjeta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lbl5MetodoPago1" />

            <RadioButton
                android:id="@+id/rbEfectivo"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lbl5MetodoPago2" />

            <RadioButton
                android:id="@+id/rbPaypal"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/lbl5Seleccionar"
                android:layout_alignTop="@+id/rg5Pago"
                android:layout_weight="1"
                android:text="@string/lbl5MetodoPago3" />
        </RadioGroup>

        <TextView
            android:id="@+id/lbl5Importe"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl5Seleccionar"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="30dp"
            android:layout_toStartOf="@+id/btn5Home"
            android:text="@string/lbl5Importe"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl5Precio"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/lbl5Importe"
            android:layout_below="@+id/lbl5Importe" />

        <Button
            android:id="@+id/btn5Pagar"
            style="@style/BtnNormal"
            android:layout_alignBottom="@+id/btn5Back"
            android:layout_alignEnd="@+id/lbl5Precio"
            android:onClick="mostrarFinalizacionCompra"
            android:text="@string/btn5Pagar" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
