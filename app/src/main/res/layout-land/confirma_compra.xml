<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uno.practicaandroid.ConfirmaCompra">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/lbl6gracias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn6Exit"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="26dp"
            android:text="@string/lbl6gracias"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl6Producto"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/img6Prod"
            android:layout_below="@+id/img6Prod"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn6Exit"
            style="@style/BtnImagen"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:onClick="volverInicio"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/lbl6Resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lbl6gracias"
            android:layout_below="@+id/lbl6gracias"
            android:layout_marginTop="29dp"
            android:text="@string/lbl6resumen"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img6Prod"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:layout_alignTop="@+id/lbl6gracias"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/btn6Exit" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
